---
import Layout from "$/layouts/Layout.astro"
import logo from "../assets/blue.svg"
import { Bootstrap, Braces, Code, WindowSidebar, BoxSeam } from "react-bootstrap-icons"

import ReadMe from "@/README.md"
---

<Layout>
    <div class="welcome-jumbotron pt-3" style="color: var(--blue-sidebar-color); background: var(--blue-sidebar-bg);">
        <div class="container pt-3 mt-3 pt-md-0">
            <h1 class="display-2 d-inline-flex align-items-center" style={{ fontWeight: "600" }}>
                <img src={logo.src} alt="Blue logo" style={{ height: "1em" }} class="me-3" /> Blue Web
            </h1>

            <p class="h2">UI library based on Bootstrap 5</p>
            <div class="h2">
                <Bootstrap />
                <Braces />
                <Code />
                <WindowSidebar />
                <BoxSeam />
            </div>
        </div>

        <div class="mt-5 rounded-top-3 bg-body text-body">
            <div class="container markdown-rendered pt-1">
                <ReadMe />
            </div>
        </div>
    </div>
</Layout>
