---
import SidebarMenu from "blue-react/dist/components/SidebarMenu.js"
import MenuItem from "blue-react/dist/components/NewMenuItem.js"
import {
    ArrowRepeat,
    ArrowsVertical,
    BarChartSteps,
    BodyText,
    CardChecklist,
    CardHeading,
    CircleHalf,
    Columns,
    CursorText,
    EyeSlash,
    House,
    HouseFill,
    Icon9Square,
    InputCursorText,
    LayersHalf,
    LayoutSidebarInset,
    LayoutTextWindowReverse,
    MenuApp,
    MenuButton,
    MenuDown,
    MenuUp,
    Palette,
    PlayBtnFill,
    Search,
    SegmentedNav,
    Tools,
    Type,
    WindowStack
} from "react-bootstrap-icons"

const currentPath = Astro.url.pathname

function prepareSectionMenuItem(path: string, section: "css" | "js") {
    const cleanPath = path
        .replace(`/src/pages/${section}/`, "")
        .replace(".astro", "")
        .replace(".mdx", "")
        .replace(".md", "")

    const itemPath = import.meta.env.BASE_URL + `${section}/${encodeURIComponent(cleanPath)}`
    return {
        path: itemPath,
        label: cleanPath,
        isActive: currentPath.includes(itemPath)
    }
}

const cssMenuItems = Object.keys(import.meta.glob("/src/pages/css/*")).map((path) =>
    prepareSectionMenuItem(path, "css")
)

const jsMenuItems = Object.keys(import.meta.glob("/src/pages/js/*")).map((path) => prepareSectionMenuItem(path, "js"))
---

<SidebarMenu>
    <ul class="list-unstyled d-flex flex-column">
        <li>
            <MenuItem href="." label="Start" current={currentPath === import.meta.env.BASE_URL}>
                {
                    currentPath === import.meta.env.BASE_URL ? (
                        <HouseFill slot="iconBefore" />
                    ) : (
                        <House slot="iconBefore" />
                    )
                }
            </MenuItem>
        </li>

        <li>
            <MenuItem
                href="typography"
                label="Typography"
                current={currentPath.includes(import.meta.env.BASE_URL + "typography")}
            >
                <Type slot="iconBefore" />
            </MenuItem>
        </li>

        <li class="mb-3">
            <MenuItem
                href="components-showcase"
                label="Components Showcase"
                current={currentPath.includes(import.meta.env.BASE_URL + "components-showcase")}
            >
                <Palette slot="iconBefore" />
            </MenuItem>
        </li>

        <li class="mb-3">
            <strong class="ps-2">CSS</strong>
            <div class="vstack">
                {
                    cssMenuItems.map((item) => (
                        <MenuItem href={item.path} label={item.label} current={item.isActive}>
                            {item.label === "Buttons" && <PlayBtnFill slot="iconBefore" />}
                            {item.label === "Collapse" && <CardHeading slot="iconBefore" />}
                            {item.label === "Container Grid" && <Columns slot="iconBefore" />}
                            {item.label === "Layout" && <LayoutTextWindowReverse slot="iconBefore" />}
                            {item.label === "Menu Item" && <MenuButton slot="iconBefore" />}
                            {item.label === "Modal" && <WindowStack slot="iconBefore" />}
                            {item.label === "Neumorphism" && <LayersHalf slot="iconBefore" />}
                            {item.label === "Popover" && <MenuDown slot="iconBefore" />}
                            {item.label === "Scrollbar" && <ArrowsVertical slot="iconBefore" />}
                            {item.label === "Scrollspy" && <SegmentedNav slot="iconBefore" />}
                            {item.label === "Input group" && <Search slot="iconBefore" />}
                            {item.label === "Sidebar" && <LayoutSidebarInset slot="iconBefore" />}
                            {item.label === "Tabs" && <SegmentedNav slot="iconBefore" />}
                            {item.label === "Text and Icons" && <Type slot="iconBefore" />}
                            {item.label === "Tooltip" && <MenuUp slot="iconBefore" />}
                            {item.label === "Utilities" && <Tools slot="iconBefore" />}
                            {item.label === "Visibility" && <EyeSlash slot="iconBefore" />}

                            {["Popover"].includes(item.label) && <span class="docs-badge docs-badge-new" />}
                            {["Menu Item", "Collapse", "Buttons"].includes(item.label) && (
                                <span class="docs-badge docs-badge-update" />
                            )}
                        </MenuItem>
                    ))
                }
            </div>
        </li>

        <li class="mb-3">
            <strong class="ps-2">JavaScript</strong>
            <ul class="list-unstyled">
                {
                    jsMenuItems.map((item) => (
                        <li>
                            <MenuItem href={item.path} label={item.label} current={item.isActive}>
                                {item.label === "Actions" && <MenuApp slot="iconBefore" />}
                                {item.label === "Color Mode" && <CircleHalf slot="iconBefore" />}
                                {item.label === "Dialog" && <WindowStack slot="iconBefore" />}
                                {item.label === "Input Splitted" && <InputCursorText slot="iconBefore" />}
                                {item.label === "Odometer" && <Icon9Square slot="iconBefore" />}
                                {item.label === "Progress" && <ArrowRepeat slot="iconBefore" />}
                                {item.label === "Read View" && <CursorText slot="iconBefore" />}
                                {item.label === "Select List" && <CardChecklist slot="iconBefore" />}
                                {item.label === "Side Layout" && <LayoutTextWindowReverse slot="iconBefore" />}
                                {item.label === "Utils" && <Tools slot="iconBefore" />}
                                {item.label === "View Transition API" && <BarChartSteps slot="iconBefore" />}

                                {item.label === "Actions" && <span class="docs-badge docs-badge-experimental" />}
                                {item.label === "Odometer" && <span class="docs-badge docs-badge-new" />}
                            </MenuItem>
                        </li>
                    ))
                }
            </ul>
        </li>

        <li>
            <strong class="ps-2">Resources for AI agents</strong>
            <ul class="list-unstyled">
                <li>
                    <MenuItem href={import.meta.env.BASE_URL + "llms.txt"} label="llms.txt">
                        <BodyText slot="iconBefore" />
                    </MenuItem>
                </li>
            </ul>
        </li>
    </ul>
</SidebarMenu>
